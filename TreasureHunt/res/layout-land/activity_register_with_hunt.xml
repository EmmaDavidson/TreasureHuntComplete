<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RegisterWithHuntActivity"
    android:background="#99CC00" >

    <TextView
        android:id="@+id/hunt_name_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF" 
        android:textSize="20sp"/>

    <Button
        android:id="@+id/start_treasure_hunt_button"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#0099CC"
        android:text="@string/play"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/register_hunt_button"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/start_treasure_hunt_button"
        android:layout_alignLeft="@+id/start_treasure_hunt_button"
        android:layout_marginBottom="18dp"
        android:background="#0099CC"
        android:text="@string/register"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/hunt_description_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hunt_description_box"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/hunt_description_box"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignLeft="@+id/hunt_name_label"
        android:layout_below="@+id/hunt_name_label"
        android:background="@drawable/scan_question_result"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20sp" />

</RelativeLayout>