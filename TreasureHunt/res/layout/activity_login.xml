<?xml version="1.0"?>

<!-- Auto Generated when adding Login Activity, although altered to suit my needs -->
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/sign_in_button"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="15dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginTop="15dp"
	    android:layout_marginRight="15dp"
	    xmlns:tools="http://schemas.android.com/tools" >
	    
	    <RelativeLayout 
	    android:background="#99CC00"
	    android:id="@+id/login_form_layout" 
	    tools:context=".LoginActivity" 
	    android:paddingTop="@dimen/activity_vertical_margin" 
	    android:paddingRight="@dimen/activity_horizontal_margin" 
	    android:paddingLeft="@dimen/activity_horizontal_margin" 
	    android:paddingBottom="@dimen/activity_vertical_margin" 
	    android:layout_height="match_parent"
	    android:layout_width="match_parent" 
	
	    android:isScrollContainer="true">

	<Button 
	    android:background="#0099CC"
		android:textColor="#FFFFFF"
	    android:id="@+id/register_on_login_button" 
	    android:layout_height="wrap_content" 
	    android:layout_width="match_parent" 
	    android:text="@string/register" 
	    android:layout_marginBottom="21dp" 
	    android:layout_alignParentBottom="true" 
	    android:layout_alignLeft="@+id/login_password"/>

	<EditText
	    android:id="@+id/login_email_address"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/login_password"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="26dp"
	    android:ems="10"
	    android:hint="@string/prompt_email"
	    android:inputType="textEmailAddress"
	    android:maxLines="1"
	    android:singleLine="true" >

	    <requestFocus />
	</EditText>

	<EditText
	    android:id="@+id/login_password"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/login_email_address"
	    android:layout_centerHorizontal="true"
	    android:ems="10"
	    android:hint="@string/prompt_password"
	    android:inputType="textPassword"
	    android:maxLines="1"
	    android:singleLine="true" />

	<Button
	    android:id="@+id/forgotten_password_button"
	    style="?android:attr/buttonStyleSmall"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/login_password"
	    android:layout_below="@+id/login_password"
	    android:background="#0099CC"
	    android:text="@string/forgot_password"
	    android:textColor="#FFFFFF" />

	<Button
	    android:id="@+id/sign_in_button"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/forgotten_password_button"
	    android:layout_centerVertical="true"
	    android:background="#0099CC"
	    android:text="@string/login"
	    android:textColor="#FFFFFF" />

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/register_on_login_button"
	    android:layout_alignLeft="@+id/register_on_login_button"
	    android:textColor="#FFFFFF"
	    android:text="@string/register_now_label" />

	</RelativeLayout>

</RelativeLayout>