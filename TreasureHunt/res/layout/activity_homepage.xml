	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/sign_in_button"
	    android:layout_alignParentLeft="true"
	    android:layout_marginBottom="15dp"
	    android:layout_marginLeft="15dp"
	    android:layout_marginTop="15dp"
	    android:layout_marginRight="15dp"
	    xmlns:tools="http://schemas.android.com/tools" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99CC00"
    android:gravity="left"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HomepageActivity" >

    <Button
        android:id="@+id/my_hunts_button"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="#0099CC"
        android:text="@string/my_hunts"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/homepage_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/browse_hunts_button"
        android:layout_alignParentTop="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FFFFFF"
        android:textSize="33sp" />

    <Button
        android:id="@+id/browse_hunts_button"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/my_hunts_button"
        android:layout_alignLeft="@+id/my_hunts_button"
        android:layout_marginBottom="23dp"
        android:background="#0099CC"
        android:text="@string/browse_hunts"
        android:textColor="#FFFFFF" />

</RelativeLayout>

</RelativeLayout>